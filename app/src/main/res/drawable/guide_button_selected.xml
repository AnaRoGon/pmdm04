<?xml version="1.0" encoding="utf-8"?>
<!-- Diseño para el botón de la guía en las pantalla de inicio y resumen -->
<!-- Botón con bordes coloreados y redondeados y degradado -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/purple" />
    <stroke android:color="@color/gold_transparent" android:width="5dp"/>
    <corners android:radius="100dp"/>
    <gradient
        android:startColor="@color/purple"
        android:centerColor="@color/pink"
        android:endColor="@color/yellow"
        android:type="linear"/>
</shape>