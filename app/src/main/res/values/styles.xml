<?xml version="1.0" encoding="utf-8"?>
<!-- Estilos personalizados para tipos y botones de la guÃ­a -->
<resources>

    <style name="TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/extrabeige</item>
    </style>

    <style name="subtitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name= "android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/purple</item>
        <item name= "android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/guide_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="buttonDialog">
        <item name="android:background">@drawable/guide_dialog</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name= "android:textStyle">bold</item>
    </style>

    <style name="buttonContinue">
        <item name="android:background">@drawable/continue_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name= "android:textStyle">bold</item>
    </style>

    <style name="buttonSkipGuide">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColor">@color/purple</item>"
        <item name="android:textSize">15sp</item>
    </style>

</resources>